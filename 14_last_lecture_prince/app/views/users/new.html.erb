<div class="container">
  <h1>Sign up</h1>
  <%= form_for @user do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, {class: "form-control" }%>
    </div>
    <div class="form-group">
      <%= f.label :bio %>
    <%= f.text_field :bio, {class: "form-control" } %>
    </div>
    <div class="custom-file">
      <%= f.label :images, class: "custom-file-label" %>
      <%= f.file_field :images, {multiple: true, class: "custom-file-input", id: "customFile"} %>
    </div>
    <hr>
    <%= f.submit "Signup!", class: "btn btn-primary" %>
  <% end %>
</div>
