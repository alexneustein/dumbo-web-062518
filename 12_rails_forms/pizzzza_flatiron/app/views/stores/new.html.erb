<%= form_tag controller: "stores", action: "create" do %>
  <%= text_field_tag "store[name]" %>
  <%= text_field_tag "store[location]" %>
  <%= text_field_tag "beef" %>
  <%= submit_tag "Create a New Store" %>
<% end %>

<% if @store.errors.any? %>
  <% @store.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @store do |form_helper| %>
  <%= form_helper.text_field :name %>
  <%= form_helper.text_field :location %>
  <%= form_helper.submit %>
<% end %>
